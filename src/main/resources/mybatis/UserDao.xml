<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
	"http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="cn.cjgl.springboot.dao.UserDao" >
	<insert id="addUser" parameterType="User">
		insert into t_sys_user(name, pwd, depid) values(#{name}, #{pwd}, #{department.id})
	</insert>

	<update id="modUser" parameterType="User">
		update t_sys_user
		set name = #{name}, pwd = #{pwd}, depid = #{department.id}
		where id = #{id}
	</update>
	
	<delete id="delUser" parameterType="User">
		delete from t_sys_user where id = #{id}
	</delete>
	
	<select id="queryUsers" parameterType="User" resultType="User">
		select * from t_sys_user
	</select>
	

</mapper>